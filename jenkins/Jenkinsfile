pipeline {
    agent {
        docker {
            image 'maven:3.9.0'
            args '-v /root/.m2:/root/.m2'
        }
    }
    environment {
        SONARQUBE_SERVER = 'http://3.110.133.91:9000'
        SONARQUBE_TOKEN = 'sqp_bfba95fa30b181608eb6d7952a7c65179872e1df'
    }
    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs() // Clean workspace to avoid leftover artifacts
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean compile -DskipTests'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube') {
                        sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=my-app \
                            -Dsonar.host.url=$SONARQUBE_SERVER \
                            -Dsonar.login=$SONARQUBE_TOKEN
                        """
                    }
                }
            }
        }
        stage('Test and Coverage') {
            steps {
                sh 'mvn test'
                sh 'mvn verify' // This generates the JaCoCo coverage report
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
    post {
        success {
            echo "Pipeline executed successfully! ðŸŽ‰"
        }
        failure {
            echo "Pipeline failed. Please check the logs."
        }
    }
}
